{
  "name": "depenadbot-helper",
  "version": "1.0.0",
  "private": false,
  "description": "A GitHub Action to auto-add dependabot changes to your changelog and increment version numbers",
  "main": "lib/dependabot-helper.js",
  "scripts": {
    "build": "tsc --module commonjs",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint src/**/*.ts",
    "package": "ncc build --source-map --license licenses.txt",
    "test": "jest",
    "test:badge": "jest --coverage && make-coverage-badge",
    "all": "npm run build && npm run format && npm run lint && npm run package && npm run test:badge"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dangoslen/dependabot-changelog-helper.git"
  },
  "keywords": [
    "dependabot",
    "node",
    "typescript",
    "actions",
    "changelog"
  ],
  "author": "@dangoslen",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.2.7",
    "@actions/github": "^4.0.0",
    "make-coverage-badge": "^1.2.0"
  },
  "devDependencies": {
    "@types/jest": "^26.0.23",
    "@types/node": "^14.14.31",
    "@typescript-eslint/parser": "^4.25.0",
    "@vercel/ncc": "^0.27.0",
    "eslint": "^7.20.0",
    "eslint-plugin-github": "^4.1.1",
    "eslint-plugin-jest": "^24.1.5",
    "jest": "^26.6.3",
    "jest-circus": "^26.6.3",
    "js-yaml": "^4.0.0",
    "prettier": "2.3.0",
    "ts-jest": "^26.5.6",
    "typescript": "^4.2.4"
  }
}
