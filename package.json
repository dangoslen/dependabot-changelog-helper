{
  "name": "depenadbot-helper",
  "version": "1.1.0",
  "private": false,
  "description": "A GitHub Action to auto-add dependabot changes to your changelog and increment version numbers",
  "main": "lib/dependabot-helper.js",
  "scripts": {
    "build": "tsc --module commonjs",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint src/**/*.ts",
    "package": "ncc build --source-map --license licenses.txt",
    "test": "jest",
    "test:badge": "jest --coverage && make-coverage-badge",
    "all": "npm run build && npm run format && npm run lint && npm run package && npm run test:badge"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dangoslen/dependabot-changelog-helper.git"
  },
  "keywords": [
    "dependabot",
    "node",
    "typescript",
    "actions",
    "changelog"
  ],
  "author": "@dangoslen",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.0",
    "@actions/github": "^5.1.1",
    "make-coverage-badge": "^1.2.0"
  },
  "devDependencies": {
    "@types/jest": "^29.2.1",
    "@types/node": "^18.11.9",
    "@typescript-eslint/parser": "^5.42.0",
    "@vercel/ncc": "^0.34.0",
    "eslint": "^8.26.0",
    "eslint-plugin-github": "^4.4.0",
    "eslint-plugin-jest": "^27.1.3",
    "jest": "^29.2.2",
    "jest-circus": "^29.2.2",
    "js-yaml": "^4.1.0",
    "prettier": "2.7.1",
    "ts-jest": "^29.0.3",
    "typescript": "^4.8.4"
  }
}
